
<div class="container">
  <div class="row color_movie">
    <div class="col-md-12">
    <div class="row theater_shows">
      <div class="col-md-10">
          <h3 class="color_white">Salas</h3>
      </div>
      <div class="col-md-2">
        <button type="button" class="btn btn-default form_create">Nueva Sala</button>
      </div>
    </div>
      <div class="row">

        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12 form_movie">
              <%= form_tag new_theater_path, method: :post, class: "form-inline" do %>
                  <%= label_tag :Nombre %>
                  <%= text_field :theater, :name, class: "form-control" %>
                  <%= label_tag :Cantidad %>
                  <%= number_field :theater, :quantity, class: "form-control" %>
                <p class="text-center">
                  <%= submit_tag "Enviar", class: "btn btn-warning" %>
                </p>
              <% end %>
            </div>
          </div>
          <div class="row">
          <div class="col-md-12">
          <table class="table table-striped table-hover table_styl">
                <tr>
                  <th>Nombre</th>
                  <th>Cantidad</th>
                  <th colspan="3">Aciones</th>
                </tr>
               
                <% @theaters.each do |theater| %>
                  <tr>
                    <td><%= theater.name %></td>
                    <td><%= theater.quantity %></td>
                    <td><%= link_to 'Show', theater_path(theater) %></td>
                    <td><%= link_to 'Edit', edit_theater_path(theater) %></td>
                    <td><%= link_to 'Destroy', theater_path(theater),
                                  method: :delete,
                                  data: { confirm: 'Estas seguro que desea eliminar esta pelicula?' } %></td>         
                  </tr>
                <% end %>
          </table>
          </div>      
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(function(){
  $('.form_create').on('click', mostrarFormulario)
  function mostrarFormulario(){
    $('.form_movie').slideToggle()
  }
});
</script>